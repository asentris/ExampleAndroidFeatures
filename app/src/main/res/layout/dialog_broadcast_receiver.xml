<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".broadcastReceiver.DialogBroadcastReceiver">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/button_airplane_mode_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/Airplane_mode_change" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/button_battery_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/Battery_change" />

</androidx.appcompat.widget.LinearLayoutCompat>